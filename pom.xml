<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.skynav.ttt</groupId>
  <artifactId>ttt</artifactId>
  <version>0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>${project.groupId}:${project.artifactId}</name>
  <description>Timed Text Toolkit</description>
  <inceptionYear>2013</inceptionYear>
  <url>https://github.com/skynav/ttt/tree/master</url>

  <properties>
    <checkstyle.version>2.15</checkstyle.version>
    <exec.version>1.4.0</exec.version>
    <findbugs.version>3.0.1</findbugs.version>
    <java.version>1.7</java.version>
    <junit.version>4.11</junit.version>
    <pmd.version>3.4</pmd.version>
    <project.info.reports.version>2.8</project.info.reports.version>
    <release.version>2.5.2</release.version>
    <surefire.version>2.18.1</surefire.version>
    <xmlunit.version>1.0</xmlunit.version>
  </properties>

  <repositories>
    <repository>
      <id>mediabase</id>
      <url>https://repository.redbullmediabase.com/content/groups/mediabase/</url>
    </repository> 
  </repositories>

  <scm>
    <url>https://git.redbullmediabase.com/projects/THIRD/repos/timed-text-toolkit</url>
    <connection>scm:git:git@git.redbullmediabase.com:7999/third/timed-text-toolkit.git</connection>
    <developerConnection>scm:git:git@git.redbullmediabase.com:7999/third/timed-text-toolkit.git</developerConnection>
  </scm>

  <distributionManagement>
    <repository>
      <id>mediabaseRelease</id>
      <url>https://repository.redbullmediabase.com/content/repositories/releases/</url>
    </repository>
    <snapshotRepository>
      <id>mediabaseSnapshot</id>
      <url>https://repository.redbullmediabase.com/content/repositories/snapshots/</url>
    </snapshotRepository>
  </distributionManagement>

  <modules>
    <module>ttt-tools</module>
    <module>ttt-ttv</module>
    <module>ttt-ttx</module>
    <module>ttt-ttxv</module>
    <module>ttt-ttpe</module>
    <module>ttt-cap2tt</module>
	  <module>ttt-webvtt</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>${java.version}</source>
            <target>${java.version}</target>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-pmd-plugin</artifactId>
          <version>${pmd.version}</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-project-info-reports-plugin</artifactId>
          <version>${project.info.reports.version}</version>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>${surefire.version}</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>findbugs-maven-plugin</artifactId>
          <version>${findbugs.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9.1</version>
        <configuration>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
